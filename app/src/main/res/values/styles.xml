<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionMenuTextColor">@color/colorGray_text</item>
        <item name="android:actionMenuTextColor">@color/colorGray_text</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottom_sheet_grid_text_appearance">@style/GridAppearance</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionBarStyle">@style/AppBarOverlay</item>

    </style>

    <style name="AppBarOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="actionMenuTextColor">@color/colorGray_text</item>
        <item name="android:actionMenuTextColor">@color/colorGray_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BottomSheet.Custom">
        <item name="bottom_sheet_bg_color">@android:color/holo_blue_light</item>
        <item name="bottom_sheet_title_text_appearance">@style/TitleAppearance</item>
        <item name="bottom_sheet_list_text_appearance">@style/ListAppearance</item>
        <item name="bottom_sheet_grid_text_appearance">@style/GridAppearance</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>

    </style>

    <style name="TitleAppearance" parent="BottomSheet.Title.TextAppearance">
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="ListAppearance" parent="BottomSheet.Title.TextAppearance">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="GridAppearance" parent="BottomSheet.Title.TextAppearance">
        <item name="android:textColor">@color/colorGray_text</item>
    </style>


</resources>
